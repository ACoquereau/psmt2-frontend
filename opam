build:[
        ["autoconf"]
        ["./configure" "-prefix" "%{prefix}%"]
	[make]
]


install:[
	[make "install"]
]

remove:[
        ["ocamlfind" "remove" "psmt2-frontend"]
]

depends: [
  "ocamlfind" {build}
  "conf-autoconf" {build}
  "menhir"
]

available: [ ocaml-version >= "4.04.0" ]
